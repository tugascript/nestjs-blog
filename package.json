{
  "name": "backend",
  "version": "0.0.1",
  "description": "NestJS & Mercurius Monolith Back-End Template",
  "author": "Afonso Barracha",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate:create": "npx mikro-orm schema:create --run",
    "migrate:update": "npx mikro-orm schema:update --run"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.100.0",
    "@aws-sdk/signature-v4-crt": "^3.88.0",
    "@fastify/cookie": "^6.0.0",
    "@fastify/cors": "^7.0.0",
    "@fastify/static": "^5.0.2",
    "@mikro-orm/core": "^5.1.4",
    "@mikro-orm/nestjs": "^5.0.1",
    "@mikro-orm/postgresql": "^5.1.4",
    "@nestjs/common": "^8.4.5",
    "@nestjs/config": "^2.0.1",
    "@nestjs/core": "^8.4.5",
    "@nestjs/graphql": "^10.0.13",
    "@nestjs/mercurius": "^10.0.13",
    "@nestjs/platform-fastify": "^8.4.5",
    "@nestjs/throttler": "^2.0.1",
    "add": "^2.0.6",
    "altair-fastify-plugin": "^4.4.1",
    "bcrypt": "^5.0.1",
    "cache-manager": "^3.6.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dayjs": "^1.11.2",
    "fastify": "^3.29.0",
    "fastify-csrf": "^3.1.0",
    "graphql": "^16.5.0",
    "handlebars": "^4.7.7",
    "ioredis": "^5.0.5",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mercurius": "^9.6.0",
    "mercurius-cache": "^1.7.1",
    "mercurius-upload": "^4.0.0",
    "mqemitter-redis": "^5.0.0",
    "nestjs-throttler-storage-redis": "^0.1.19",
    "nodemailer": "^6.7.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "sharp": "^0.30.5",
    "slugify": "^1.6.5",
    "uuid": "^8.3.2",
    "yarn": "^1.22.18"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.3.1",
    "@mikro-orm/cli": "^5.1.4",
    "@mikro-orm/sqlite": "^5.1.4",
    "@nestjs/cli": "^8.2.6",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.5",
    "@types/bcrypt": "^5.0.0",
    "@types/cache-manager": "^3.4.3",
    "@types/graphql-upload": "^8.0.11",
    "@types/jest": "27.5.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.36",
    "@types/nodemailer": "^6.4.4",
    "@types/sharp": "^0.30.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.3",
    "ts-jest": "^27.1.5",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.2",
    "webpack": "^5.72.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "packageManager": "yarn@3.2.0"
}
